                    <td>{record.to_date ? formatDate(record.to_date) : "Present"}</td>
                    <td>{record.position}</td>
                    <td>{record.department}</td>
                    <td>₱{record.monthly_salary.toLocaleString()}</td>
                    <td>{record.salary_grade}</td>
                    <td>{record.step_increment}</td>
