            <div className="print-value">₱{employee.monthly_salary.toLocaleString()}</div>
          </div>
        </div>

        {/* III. GOVERNMENT ISSUED IDs */}
        <div className="print-section">
          <div className="print-section-title">III. GOVERNMENT ISSUED ID's</div>
          <div className="print-row">
            <div className="print-label">TIN:</div>
            <div className="print-value">{employee.tin || "N/A"}</div>
            <div className="print-label">GSIS NO:</div>
            <div className="print-value">{employee.gsis_number || "N/A"}</div>
          </div>
          <div className="print-row">
