          /* Reset page layout */
          body {
            margin: 0;
            padding: 20px;
            background: white;
          }

          /* Print header */
          .print-header {
            display: block !important;
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 3px solid #000;
            padding-bottom: 20px;
          }

          .print-title {
            font-size: 18px;
